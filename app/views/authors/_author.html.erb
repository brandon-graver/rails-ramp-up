<div id="<%= dom_id author %>">
  <p>
    <strong>First name:</strong>
    <%= author.first_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= author.last_name %>
  </p>
  <p>
    <strong>Posts: </strong>
  </p>
  <ul>
    <%= author.posts.uniq.each do |post|%>
      <li>
        Body: <%= post.body %>
      </li>
    <% end %>
  </ul>
</div>
